{
  "name": "backend",
  "version": "1.0.0",
  "description": "CampusBridge Backend Server",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "start": "NODE_OPTIONS='--experimental-modules --es-module-specifier-resolution=node' NODE_PATH=./node_modules node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    
    // Deployment-critical scripts
    "install:render": "rm -rf node_modules package-lock.json && npm install --production=false --legacy-peer-deps --force --no-audit",
    "verify": "node -e \"try { console.log('✓ Express found at:', require.resolve('express')); process.exit(0) } catch (e) { console.error('✗ Express missing!'); process.exit(1) }\"",
    "prestart": "npm run verify",
    "postinstall": "npm run verify",
    
    // Debugging helpers
    "list-modules": "ls -la node_modules",
    "check-paths": "node -e \"console.log('NODE_PATH:', process.env.NODE_PATH, '\nRequire Paths:', require.resolve.paths('express'))\""
  },
  "dependencies": {
    "express": "4.18.2",  // Pinned exact version
    "cors": "2.8.5",
    "mongoose": "8.12.1",
    "dotenv": "16.4.1",
    "jsonwebtoken": "9.0.2",
    "bcryptjs": "3.0.2",
    "socket.io": "4.8.1",
    "cloudinary": "1.41.3",
    "multer": "1.4.5-lts.1",
    "multer-storage-cloudinary": "4.0.0",
    "streamifier": "0.1.1"
  },
  "devDependencies": {
    "nodemon": "3.1.10"
  },
  "resolutions": {
    "express": "4.18.2"
  },
  "overrides": {
    "express": {
      "cookie-signature": "1.2.0",
      "debug": "4.3.4"
    }
  },
  "imports": {
    "#app/*": "./*",
    "#modules/*": "./node_modules/*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "config": {
    "forceInstall": true
  }
}