{
  "name": "backend",
  "version": "1.0.0",
  "description": "CampusBridge backend server",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "NODE_PATH=./node_modules node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "node -e \"console.log('✔️  Installed Express at:', require.resolve('express'))\"",
    "prestart": "ls node_modules/express || { echo '❌ Express not found!'; exit 1; }",
    "clean-install": "rm -rf node_modules package-lock.json && npm install --production=false --legacy-peer-deps"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.12.1",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "socket.io": "^4.8.1",
    "streamifier": "^0.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "resolutions": {
    "express": "^4.21.2"
  },
  "imports": {
    "#modules/*": "./node_modules/*/index.js"
  }
}